<%= render 'layouts/header' %>
<div class="container p-t-md">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <ul class="list-group media-list media-list-stream">
        <li class="list-group-item p-a">
          <h2 class="m-a-0">Shopping Cart</h2>
        </li>

        <li class="media list-group-item p-a">
          <div class="media-body">
            <div class="cart">
            <% if @cart_items.empty? %>
                <h3>Your cart is empty! What about choosing some clothes?</h3>
            <% else %>
            <table class="table table-responsive">
              <tbody>
                <% @cart_items.each do |cart_item| %>
                <tr>
                  <td>
                    <div class="btn-group-vertical" role="group">
                      <%= link_to raw("<i class=\"fa fa-chevron-up\"></i>"), { controller: :cart, action: :update, quantity: cart_item.quantity + 1, cloth_instance_id: cart_item.item.id }, method: :patch, class: 'btn btn-sm btn-default' %>
                      <button type="button" class="btn btn-sm btn-default" aria-label="Right Align">
                        <strong><%= cart_item.quantity %></strong>
                      </button>

                      <%= link_to raw("<i class=\"fa fa-chevron-down\"></i>"), { controller: :cart, action: :update, quantity: cart_item.quantity - 1, cloth_instance_id: cart_item.item.id }, method: :patch, class: 'btn btn-sm btn-default' if cart_item.quantity > 1 %>
                    </div>
                  </td>
                  <td>
                    <%= image_tag cart_item.item.image.url(:medium), class: 'img-responsive center-block' %>
                  </td>
                  <td>
                    <h4><%= cart_item.item.name %></h4>
                    <%= cart_item.item.color %> - 
                    <%= cart_item.item.size %>
                  </td>
                  <td><%= link_to cart_item.item.store.name, cart_item.item.store %></td>
                  <td><%= humanized_money_with_symbol cart_item.subtotal %>
                  <%= button_to 'X', { controller: :cart, action: :remove, cloth_instance_id: cart_item.item.id }, method: :delete, class: 'btn btn-primary-outline' %></td>
                </tr>
                <% end %>
                <tr>
                  <td colspan="2"</td>
                  <td>Subtotal:</td>
                  <td><%= humanized_money_with_symbol @cart.subtotal %></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
            <div class="shipping">
                  <%= form_tag new_order_path, method: :get do %>
                    <%= shipping_cost_radio_button @cart, 1 %>
                    <%= shipping_cost_radio_button @cart, 2 %>
                    <%= button_tag 'Checkout', class: 'btn btn-primary' %>
                  <% end %>
                </div>
            <% end %>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>



