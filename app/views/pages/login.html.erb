<div class="container-fluid container-fill-height">
  <div class="container-content-middle">
    <form role="form" class="m-x-auto text-center app-login-form">

      <a href="/" class="app-brand m-b-lg">
        <img src="http://s29.postimg.org/ggu7yqot3/F2r_Syrv.png" alt="brand">
      </a>

      <div class="form-group">
        <a id="facebook-button" ng-click="startLogin()" ng-disabled="!facebookReady || isSubmitting" class="fb-button">
            <span class="facebook"></span> Connect with Facebook
          </a>
      </div>

      <hr />

      <div class="form-group">
        <input class="form-control" placeholder="Username">
      </div>

      <div class="form-group m-b-md">
        <input type="password" class="form-control" placeholder="Password">
      </div>

      <div class="m-b-lg">
        <button class="btn btn-block btn-primary">Log In</button>
      </div>

      <footer class="screen-login">
        <%= link_to "Sign up", register_path %> | 
        <%= link_to "Forgot password", forgot_path %>
      </footer>
    </form>
  </div>
</div>

