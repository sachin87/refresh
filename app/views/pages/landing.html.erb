<div id="jumbotron" class="jumbotron home-header">
  <div class="col-md-12">
    <h1 class="text-center hidden-sm hidden-xs">On-Demand Clothing</h1>
    <h2 class="text-center hidden-md hidden-lg text-center">On-Demand Clothing</h2>
    <h3 class="text-center hidden-sm hidden-xs">Get clothes delivered in an hour</h3>
    <h3 class="text-center hidden-md hidden-lg text-center">Get clothes delivered in an hour</h3>
  </div>
  <div class="col-md-4 col-md-offset-4">
  	<br class="hidden-xs hidden-sm">
  	<br />
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-12 col-md-offset-0">
        <%= form_tag '', method: :post, id: 'store-location-form' do %>
          <div class="input-group">
            <%= hidden_field_tag :latitude %>
            <%= hidden_field_tag :longitude %>
            <%= search_field_tag :address, nil, class: "form-control input-lg", id: "gmaps-autocomplete", autofocus: true, placeholder: "Enter your address", required: true %>
            <span class="input-group-btn">
              <%= button_tag "Go!", value: "search", class: "btn btn-primary btn-lg" %>
            </span>
          </div><!-- /input-group -->
        <% end %>
      </div>
    </div><!-- /.row -->

  </div>
  <div class="clearfix"></div>
</div>

<div class="col-md-10 col-md-offset-1">
  <div class="col-md-4">
    <div class="panel panel-default panel-profile m-b-md">
      <div class="panel-heading" style="background-image: url(http://i.imgur.com/JiYexDd.png);"></div>
      <div class="panel-body text-center">
        <a href="/profile/">
          <img
            class="panel-profile-img"
            src="https://o.quizlet.com/nWewxlKydOUi3Ma9tRVpGA_m.jpg">
        </a>

        <h4 class="panel-title">
          <a class="text-inherit" href="/profile/">Type in your address</a>
        </h4>

        <p class="m-b-md">See what stores are available for delivery!</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default panel-profile m-b-md">
      <div class="panel-heading" style="background-image: url(http://www.c-heads.com/wp-content/uploads/2015/01/COPYRIGHT-2015-Summerville-by-Cameron-Mackie-for-C-Heads-23.jpg);"></div>
      <div class="panel-body text-center">
        <a href="/profile/">
          <img
            class="panel-profile-img"
            src="https://o.quizlet.com/PKLUdBkYB3.A5fet.PvNWQ_m.jpg">
        </a>

        <h5 class="panel-title">
          <a class="text-inherit" href="/profile/">Find Clothes You Want</a>
        </h5>

        <p class="m-b-md">Choose from the hottest new styles in your area!</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default panel-profile m-b-md">
      <div class="panel-heading" style="background-image: url(http://2v6d6r273itb1maegw3lorhx.wpengine.netdna-cdn.com/wp-content/uploads/2015/07/clothing.jpg);"></div>
      <div class="panel-body text-center">
        <a href="/profile/">
          <img
            class="panel-profile-img"
            src="https://o.quizlet.com/eqRXXoIOpKXJj0NXxuuL2g_m.jpg">
        </a>

        <h5 class="panel-title">
          <a class="text-inherit" href="/profile/">Answer Your Door</a>
        </h5>

        <p class="m-b-md">Ding dong. Your clothes have arrived!</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
<div class="col-md-10 col-md-offset-2">
<ul class="cities">
  <% @cities.each do |city| %>
    <li><%= link_to city, "/#{city.parameterize}" %></li>
  <% end %>
</ul>
</div>
</div>

