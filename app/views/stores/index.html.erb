<div class="profile-header text-center" style="background:#fff">
  <div class="container">
    <div class="container-inner">
      <h1 class="profile-header-user" style="font-size:70px;"><%= @city %></h1>
    </div>
  </div>
  <nav class="profile-header-nav">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#">Stores</a>
      </li>
      <li>
        <a href="#">Clothes</a>
      </li>
      <li>
        <a href="#">New</a>
      </li>
    </ul>
  </nav>
</div>

<div class="stores container m-y-md" data-grid="rowGrid">
  <% if @stores.empty? %>
    <h2>No stores found in this location</h2>
  <% end %>
  <% @stores.each do |store| %>
    <div class="store item">
      <%= link_to store_path(store) do %>
        <%= image_tag store.thumbnail.url, class: "store-item" %>
        <h3><%= store.name %></h3>
        <% if store.available_for_delivery? %>
          <i class="available-for-delivery fa fa-truck"></i>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
