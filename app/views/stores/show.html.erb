<!-- Generating modals for clothes -->
<% @clothes.each do |cloth| %>
  <%= render 'cloth_modal', cloth: cloth, store: @store %>
<% end %>

<div id="nav-wrapper" class="js-affix-wrapper">
  <nav class="navbar navbar-inverse js-affix">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li class="active">
          <%= link_to "/" + @store.city do %>
            <%=@store.city%> > <%=@store.name%>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Mens <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Womens</a></li>
            <li><a href="#">Both</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Small <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Medium</a></li>
            <li><a href="#">Large</a></li>
            <li><a href="#">XL</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Black <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Red</a></li>
            <li><a href="#">Green</a></li>
            <li><a href="#">Blue</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">T-Shirts<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Pants</a></li>
            <li><a href="#">Shorts</a></li>
            <li><a href="#">Hoodies</a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.container-fluid -->
  </nav>
</div>


<div class="profile-header text-center">
  <div class="container-inner">
    <%= image_tag @store.logo.url, class: 'img-circle media-object' %>

    <p class="profile-header-bio">
      <br />
      <%= link_to @store.address + ", " + @store.city, "https://www.google.com/maps/place/" + @store.address + ", " + @store.city, style: "font-size: 14px;", target: "_blank" %>
      <% if @store.available_for_delivery? %>
        <i class="available-for-delivery fa fa-truck"></i>
      <% end %>
    </p>
  </div>
  <nav class="profile-header-nav">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#">All</a>
      </li>
      <li>
        <a href="#">New</a>
      </li>
      <li>
        <a href="#">Popular</a>
      </li>
      <li>
        <a href="#">Deals</a>
      </li>
    </ul>
  </nav>
</div>


<div class="js-image-grid container m-y-md col-md-8 col-md-offset-2">
  <% if @clothes.empty? %>
    <h2>No products registered for this store yet</h2>
  <% end %>

  <% @clothes.each do |cloth| %>
    <div class="cloth item">
      <%= link_to '#' + modal_id(cloth), 'data-toggle' => 'modal' do%>
        <%= image_tag cloth.image_url, width: cloth.image_dimensions.width, height: cloth.image_dimensions.height %>
        <i class="heart-this fa fa-heart-o"></i>
        <h3><%= cloth.name %></h3>
        <h4><%= number_to_currency(cloth.price, precision: 0) %></h4>
      <% end %>
    </div>
  <% end %>
</div>
<div class="clearfix"></div>
