<%= render 'layouts/header' %>

<!-- Generating modals for clothes -->
<% @store.clothes.each do |cloth| %>
  <%= render 'cloth_modal', cloth: cloth %>
<% end %>

<div class="profile-header text-center">
  <div class="container">
    <div class="container-inner">
      <img class="img-circle media-object" style="margin-top:50px;" src="http://i.imgur.com/mVi6JGA.png">

      <p class="profile-header-bio">
        <br />
        <%= link_to @store.address + ", " + @store.city, "https://www.google.com/maps/place/" + @store.address + ", " + @store.city, target: "_blank" %>
        <% if @store.available_for_delivery? %>
          <i class="available-for-delivery fa fa-truck"></i>
        <% end %>
      </p>
    </div>
  </div>

  <nav class="profile-header-nav">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#">Hot</a>
      </li>
      <li>
        <a href="#">Clothes</a>
      </li>
      <li>
        <a href="#">New</a>
      </li>
    </ul>
  </nav>
</div>

<div class="clothes container m-y-md" data-grid="rowGrid">
  <% if @store.clothes.empty? %>
    <h2>No products registered for this store yet</h2>
  <% end %>
  <% @store.clothes.each do |cloth| %>
    <div class="cloth item">
      <%= link_to '#' + modal_id(cloth), 'data-toggle' => 'modal' do%>
        <%= image_tag cloth.image.url(:medium) %>
        <h3><%= cloth.name %></h3>
        <i class="heart-this fa fa-heart-o"></i>
      <% end %>
      <%= render 'cloth_modal', cloth: cloth %>
    </div>
  <% end %>
</div>
