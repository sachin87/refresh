<div class="js-cloth-modal modal fade" id="<%= modal_id(cloth) %>" data-cloth-id="<%= cloth.id %>" tabindex="-1" role="dialog" aria-labelledby="msgModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= cloth.name %> - <%= link_to cloth.chain.name, cloth.store %></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-2 col-md-2">
            <i class="fa fa-chevron-left fa-2x" style="margin-top:250%;"></i>
          </div>
          <div class="col-xs-8 col-md-8">
            <%= image_tag cloth.image.url(:medium), class: 'img-responsive center-block' %>
          </div>
          <div class="col-xs-2 col-md-2">
            <i class="fa fa-chevron-right fa-2x pull-right" style="margin-top:250%;"></i>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-2">
              <h3 style="margin-top:0px;"><%= humanized_money_with_symbol cloth.price %></h3>
            </div>
            <%= form_for ClothInstance.new, url: cart_add_path, method: :patch do |f| %>
              <%= f.hidden_field :quantity, name: 'quantity', value: 1 %>
              <%= f.hidden_field :store_id, value: store.id %>
              <div class="col-xs-3">
                <%= select_tag :size, size_options_for(cloth), class: 'form-control js-size-select' %>
              </div>
              <div class="col-xs-4">
                <%= f.select :cloth_variant_id, [], {}, class: 'form-control js-color-select' %>
              </div>
              <br /><br />
              <div class="col-xs-12">
                <%= f.button class: 'btn btn-block btn-primary' do %>
                  <i class="fa fa-plus"></i> Add
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
