<div id="<%= modal_id(cloth) %>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="msgModal" aria-hidden="true">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="col-xs-8">
          <h4 class="modal-heading"><%= cloth.name %> - <%= link_to cloth.chain.name, cloth.store %></h4>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="modal-body">
        <div class="col-md-12">
          <%= image_tag cloth.image.url(:medium), class: 'img-responsive' %>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="modal-footer">
        <div class="col-xs-12">
          <%= form_for ClothInstance.new, url: cart_add_path, method: :patch do |f| %>
            <%= f.hidden_field :quantity, name: 'quantity', value: 1 %>
            <%= f.hidden_field :store_id, value: store.id %>

            <div class="col-xs-3">
              <%= select_tag :size, size_options_for(cloth), class: 'form-control js-size-select' %>
            </div>
            <div class="col-xs-4">
              <%= f.select :cloth_variant_id, [], {}, class: 'form-control js-color-select' %>
            </div>
            <div class="col-xs-2 col-xs-offset-1">
              <h3 style="margin-top:0px;"><%= humanized_money_with_symbol cloth.price %></h3>
            </div>
            <br><br>
            <div class="col-xs-12">
              <%= f.button class: 'btn btn-block green btn-success' do %>
                <i class="fa fa-plus"></i> Add
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
