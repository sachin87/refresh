<div class="modal fade" id="<%= modal_id(cloth) %>" tabindex="-1" role="dialog" aria-labelledby="msgModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= cloth.name %></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-2 col-md-2">
            <i class="fa fa-chevron-left fa-3x" style="margin-top:250%;"></i>
          </div>
          <div class="col-xs-8 col-md-8">
            <%= image_tag cloth.image.url(:medium), class: 'img-responsive center-block' %>
          </div>
          <div class="col-xs-2 col-md-2">
            <i class="fa fa-chevron-right fa-3x" style="margin-top:250%;"></i>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-2">
              <h3><%= humanized_money_with_symbol cloth.price %></h3>
            </div>
            <%= form_for cloth.cloth_instances.build, url: cart_add_path, method: :patch do |f| %>
              <%= f.hidden_field :quantity, name: 'quantity', value: 1 %>
              <%= f.hidden_field :cloth_id %>
              <%= f.hidden_field :store_id, value: store.id %>
              <div class="col-xs-4">
                <%= f.select :color, %w(red blue green),{}, {class: 'form-control'} %>
              </div>
              <div class="col-xs-2">
                <%= f.select :size, %w(S M L XL),{}, {class: 'form-control'}  %>
              </div>
              <br /><br />
              <div class="col-xs-12">
                <%= f.button class: 'btn btn-block btn-primary' do %>
                  <i class="fa fa-plus"></i> Add
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
