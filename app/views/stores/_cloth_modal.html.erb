<div class="modal fade" id="<%= modal_id(cloth) %>" tabindex="-1" role="dialog" aria-labelledby="msgModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= cloth.name %></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-2 col-md-2">
            <i class="fa fa-chevron-left fa-4x" style="margin-top:150%;"></i>
          </div>
          <div class="col-xs-8 col-md-8">
            <%= image_tag cloth.image.url(:medium), class: 'img-responsive center-block' %>
          </div>
          <div class="col-xs-2 col-md-2">
            <i class="fa fa-chevron-right fa-4x" style="margin-top:150%;"></i>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-xs-4 col-xs-offset-5">
            <p>Price: <%= humanized_money_with_symbol cloth.price %></p>
          </div>
          <div class="col-xs-3">
            <button name="button" type="submit" value="search" class="btn btn-primary"><i class="fa fa-plus"></i> Add</button>
          </div>
        </div>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
